{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "@src/*": ["src/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@scripts": ["src/scripts"],
      "@scripts/*": ["src/scripts/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@assets": ["src/assets/*"],
      "@types": ["src/types"]
    }
  },
  "include": ["src"]
}
